<form>   
    <group id="student" colspan="4" col="4">
        <label name="student"/>
        <field name="student"/>  
        <label name="state"/>
        <field name="state"/> 
        <label name="type"/>
        <field name="type"/> 
        <label name="classes"/>
        <field name="classes"/> 
    </group>
    <notebook colspan="4">
        <page string="Descrição" id="description">
            <field name="description" widget="richtext"/>
        </page>
        <page string="Disciplinas" id="classe_student_discipline">
            <field name="classe_student_discipline" mode="tree,form" colspan="4" 
                view_ids="akademy_classe.classe_student_discipline_view_tree,akademy_classe.classe_student_discipline_view_form"/>
        </page>
        <page string="Presenças" id="classe_student_presence">
            <field name="classe_student_presence" mode="tree,form" colspan="4" 
                view_ids="akademy_classe.classe_student_presence_view_tree,akademy_classe.classe_student_presence_view_form"/>
        </page>
    </notebook>  
</form>
